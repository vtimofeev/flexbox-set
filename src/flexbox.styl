/* default */
.cols, .flex-columns {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;

  .flex-break {
    width: 100%;
  }
}

.rows, .flex-rows {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;

  .flex-break {
    height: 100%;
  }
}

.wrap, .multi, .flex-wrap, .flex-multi {
  flex-wrap: wrap;
}

.reverse, .flex-wrap--reverse, .flex-multi--reverse {
  flex-wrap: wrap-reverse;
}

.cell, .flex-cell {
  box-sizing: border-box;
  flex-grow: 1;
  flex-shrink: 1;
}

.cell--s, .flex-cell--static {
  box-sizing: border-box;
  flex-grow: 0;
  flex-shrink: 0;
}

.cell--pull-left, .flex-cell--pull-left {
  @extend .flex-cell--static
  margin-right: auto;
}

.cell--pull-right, .flex-cell--pull-right {
  @extend .flex-cell--static
  margin-left: auto;
}

.cell--pull-top, .flex-cell--pull-top {
  @extend .flex-cell--static
  margin-bottom: auto;
}

.cell--pull-bottom, .flex-cell--pull-bottom {
  @extend .flex-cell--static
  margin-top: auto;
}

.cell--1, .flex-cell--1, .flex-cell--full {
  @extend .flex-cell--static
  flex-basis: 100%;
}

.cell--1-2, .flex-cell--1-2 {
  @extend .flex-cell--static
  flex-basis: 50%;
}

.cell--2-3, .flex-cell--2-3 {
  @extend .flex-cell--static
  flex-basis: 66.66%;
}

.cell--1-3, .flex-cell--1-3 {
  @extend .flex-cell--static
  flex-basis: 33.33%;
}

.cell--1-4, .flex-cell--1-4 {
  @extend .flex-cell--static
  flex-basis: 25%;
}

.cell--1-5, .flex-cell--1-5 {
  @extend .flex-cell--static
  flex-basis: 20%;
}

.flex--main-center {
  justify-content: center;
}

.flex--main-end {
  justify-content: flex-end;
}

.flex--main-around {
  justify-content: space-around;
}

.flex--main-evenly {
  justify-content: space-evenly;
}

.flex--main-between {
  justify-content: space-between;
}

.flex--cross-start {
  align-items: flex-start;
}

.flex--cross-center {
  align-items: center;
}

.flex--cross-end {
  align-items: flex-end;
}

/* default */
.flex--cross-fill, .flex--cross-stretch {
  align-items: stretch;
}

.flex-multi--cross-start {
  align-content: flex-start;
}

.flex-multi--cross-center {
  align-content: center;
}

.flex-multi--cross-end {
  align-content: flex-end;
}

.flex-multi--cross-around {
  align-content: space-around;
}

.flex-multi--cross-between {
  align-content: space-between;
}

/* default */
.flex-multi--cross-fill, .flex-multi--cross-stretch {
  align-content: stretch;
}


/* self align */
.cell--self-start, .flex-cell--self-left, .flex-cell--self-top {
  align-self: flex-start;
}

.cell--self-end, .flex-cell--self-right, .flex-self--self-bottom {
  align-self: flex-end;
}

.cell--self-center, .flex-cell--self-center {
  align-self: center;
}

/* Patterns */

.cols--center {
  @extend .cols, .flex--main-center, .flex--cross-center;
}

.cols--top {
  @extend .cols, .flex--main-center, .flex--cross-start;
}

.cols--bottom {
  @extend .cols, .flex--main-center, .flex--cross-start;
}

.cols-multi--center {
  @extend .cols, .flex-multi, .flex--main-center, .flex-multi--cross-center;
}

.rows--center {
  @extend .cols, .flex--main-center, .flex--cross-center;
}

.rows--left {
  @extend .cols, .flex--main-center, .flex--cross-start;
}

.rows--right {
  @extend .cols, .flex--main-center, .flex--cross-end;
}

.rows-multi--center {
  @extend .cols, .flex-multi, .flex--main-center, .flex--cross-center;
}

